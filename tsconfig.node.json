{
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": false, // Set to true if you want only declaration files
    "target": "esnext",
    "module": "commonjs", // Use "esnext" if needed
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ]
}